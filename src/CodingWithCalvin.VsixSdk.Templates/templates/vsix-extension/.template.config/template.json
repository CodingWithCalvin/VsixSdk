{
  "$schema": "http://json.schemastore.org/template",
  "author": "CodingWithCalvin",
  "classifications": [
    "Visual Studio",
    "Extension",
    "VSIX"
  ],
  "identity": "CodingWithCalvin.VsixSdk.Extension",
  "name": "VSIX Extension (SDK-style)",
  "shortName": "vsix",
  "description": "A Visual Studio extension project using SDK-style format with CodingWithCalvin.VsixSdk",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "VsixExtension",
  "preferNameDirectory": true,
  "defaultName": "VsixExtension",
  "symbols": {
    "extensionName": {
      "type": "parameter",
      "datatype": "string",
      "displayName": "Extension Name",
      "description": "The display name shown in Visual Studio's extension manager (defaults to project name)",
      "defaultValue": "",
      "replaces": "TEMPLATE_EXTENSION_NAME",
      "isRequired": false
    },
    "publisher": {
      "type": "parameter",
      "datatype": "string",
      "displayName": "Publisher",
      "description": "Publisher name for the VSIX manifest (shown in extension manager)",
      "defaultValue": "MyPublisher",
      "replaces": "TEMPLATE_PUBLISHER",
      "isRequired": false
    },
    "description": {
      "type": "parameter",
      "datatype": "string",
      "displayName": "Description",
      "description": "Description of what your extension does",
      "defaultValue": "A Visual Studio extension",
      "replaces": "TEMPLATE_DESCRIPTION",
      "isRequired": false
    },
    "tags": {
      "type": "parameter",
      "datatype": "string",
      "displayName": "Tags",
      "description": "Comma-separated tags for discoverability (e.g., productivity, editor)",
      "defaultValue": "extension",
      "replaces": "TEMPLATE_TAGS",
      "isRequired": false
    },
    "extensionNameResolved": {
      "type": "generated",
      "generator": "coalesce",
      "parameters": {
        "sourceVariableName": "extensionName",
        "fallbackVariableName": "name"
      },
      "replaces": "TEMPLATE_EXTENSION_NAME_RESOLVED"
    },
    "guid1": {
      "type": "generated",
      "generator": "guid",
      "replaces": "TEMPLATE_GUID1",
      "parameters": {
        "format": "D"
      }
    },
    "guid2": {
      "type": "generated",
      "generator": "guid",
      "replaces": "TEMPLATE_GUID2",
      "parameters": {
        "format": "D"
      }
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "**/.vs/**",
            "**/*.user"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "VsixExtension.slnx"
    }
  ],
  "postActions": [
    {
      "condition": "(OS != \"Windows_NT\")",
      "description": "Manual instructions for non-Windows",
      "manualInstructions": [
        {
          "text": "Note: Visual Studio extensions can only be built and debugged on Windows with Visual Studio 2022+."
        }
      ],
      "actionId": "AC1156F7-BB77-4DB8-B28F-24EEBCCA1E5C",
      "continueOnError": true
    }
  ]
}
